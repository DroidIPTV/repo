<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.archiv"
       version="1.1.19"
       name="Archiv"
       provider-name="KOVI">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.xbmcswift2"/>
        <import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="de">Archiv</summary>
        <description lang="de">Archiviere deine Favoriten in Addons, Sendern, Apps, Befehlen, Favoriten, Ordnern, Websiten.</description>
        <disclaimer lang="de">Keine Gewähr.</disclaimer>
    </extension>
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">

            <item library="add_item_context.py">
                <label>zum Archiv hinzufügen</label>
                <visible>true</visible>
            </item>
        </menu>
    </extension>
      <assets>
    <icon>resources/icon.png</icon>
  </assets>
</addon>

